<h1>Blog</h1>

<ul>
  <% @posts.each do |post| %>
  <li><%= link_to post.title, post_path(post) %>, by <%= post.author %>
    <ul>
      <li><%= truncate(post.content, length: 100, separator: ' ') %></li>
    </ul>
    Tags: <%= raw post.tag_list.map { |tag| link_to tag, tag_path(tag) }.join(', ') %>
  </li>
  <% end %>
</ul>
<% if current_user && current_user.admin? %>
<%= link_to "Add a Post", new_post_path %>
<% end %>
