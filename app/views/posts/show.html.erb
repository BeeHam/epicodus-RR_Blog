<h1><%= @post.title %></h1>
<h3>by <%= @post.author %>, <%= distance_of_time_in_words(@post.created_at, Time.now) %> ago</h3>

<p>
  <%= @post.content %>
</p>

<hr>

<h3>Comments</h3>
<%= link_to "Add a comment", new_post_comment_path(@post) %>

<ul>
  <% @post.comments.each do |comment| %>
  <li><%= comment.content %> - <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</li>
  <% end %>
</ul>
