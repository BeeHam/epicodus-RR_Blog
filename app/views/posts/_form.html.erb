<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :tag_list, "Tags (separated by commas)" %><br />
  <%= f.text_field :tag_list %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content, cols: 40, rows: 10  %>
  <br>
  <%= f.submit %>
<% end %>
